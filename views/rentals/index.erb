<h1>Leases</h1>

<div class="form">
  <table>
    <tr><th class="main" colspan="7">Leased Properties</th></tr>
      <tr>
        <th>Property Name</th>
        <th>Property No</th>
        <th>Street Name</th>
        <th>Town</th>
        <th>Postcode</th>
        <th>Lease Commencement Date</th>
        <th>Tenant Count</th>
      </tr>
 <% @rentals.each() { |rental| if rental.property.prop_status == "leased"%>
    <tr>
      <td class="column"><%=rental.property.prop_name%></td>
      <td><%=rental.property.prop_no%></td>
      <td class="column"><%=rental.property.street_name%></td>
      <td class="column"><%=rental.property.town%></td>
      <td class="column"><%=rental.property.postcode%></td>
      <td>T.B.A.</td>
      <td>T.B.A.</td>
    </tr>
   <% end } %>
  </table>
</div>

<p><a href="/rentals/new">Create New Lease</a></p>
